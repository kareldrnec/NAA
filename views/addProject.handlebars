{{> navbar}}

<div>
    {{#if flash}}
    <div style="text-align: center; position: absolute; width: 100%;" id="flash" class="alert alert-{{flash.type}}" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>{{flash.text}}</strong>
    </div>
    {{/if}}

    <div class="container-fluid bg pt-5">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <!--form start-->
                <form class="form-container" action="/projects/add" method="post">
                    <h2 class="text-center">{{__ "add project"}}</h2>
                    <div class="form-group">
                        <label for="projectName">{{__ "project name"}}</label>
                        <input type="text" class="form-control" name="projectName" required placeholder="{{__ "enter project name"}}">
                    </div>
                    <div class="form-group">
                        <label for="type">{{__ "type of project"}}</label>
                        <select name="type" class="form-control">
                            <option value="cpm">CPM</option>
                            <option value="pert">PERT</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="projectInfo">{{__ "information"}}</label>
                        <textarea name="projectInfo" class="form-control" placeholder="{{__ "enter project description"}}"></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">{{__ "add project"}}</button>
                        <button type="button" class="btn btn-secondary btn-block" onclick="history.back()">{{__ "back"}}</button>
                    </div>
                </form>
                <!--form end-->
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</div>

<script>
    setTimeout(function() {
        $('#flash').fadeOut('fast');
    }, 3000);
</script>