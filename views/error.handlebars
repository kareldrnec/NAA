{{> navbar_login}}

<div>
    {{#if msg}}
    <div style="text-align: center; position: absolute; width: 100%;" id="flash" class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>{{ msg }}</strong>
    </div>
    {{/if}}

    <div class="d-flex pt-5 justify-content-center align-items-center">
        <h1 class="mr-3 pr-3 align-top border-right inline-block align-content-center">{{code}}</h1>
        <div class="inline-block">
            <h2>{{__ "not found"}}</h2>
            <div class="text-center">
                <a href="/">
                    <h4>
                        {{#ifEquals code "404"}}
                        {{__ "go back"}}
                        {{/ifEquals}}
                    </h4>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function() {
        $('#flash').fadeOut('fast');
    }, 3000);
</script>


