{{> navbar_login}}

<div>
    {{#if msg}}
    <div style="text-align: center; position: absolute; width: 100%;" id="flash" class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>{{ msg }}</strong>
    </div>
    {{/if}}

    <div class="container-fluid bg pt-5 animate__animated animate__bounceInUp" id="loginForm">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <!--form start-->
                <form class="form-container" action="/users/login" method="POST">
                    <div class="text-center">
                        <img src="/images/user.png" width="90" height="90">
                    </div>
                    <h2 class="text-center">{{__ "login"}}</h2>
                    <div class="form-group">
                        <label for="exampleInputEmail1">{{__ "email address"}}</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                            aria-describedby="emailHelp" placeholder="{{__ "enter email"}}" required>
                    </div>
                    <div class="form-group">
                        <label for="password">{{__ "password"}}</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="{{__ "password"}}" required>
                            <div class="input-group-append">
                                <span class="input-group-text" title="Show/Hide Password"><i class="far fa-eye" id="togglePassword"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">{{__ "log in"}}</button>
                    </div>
                    <small id="registerHelp" class="form-text text-muted text-center"><a href="/users/register">{{__ "no account"}}</a></small>
                </form>
                <!--form end-->
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</div>

<script>

    setTimeout(function() {
        $('#flash').fadeOut('fast');
    }, 3000);

    const togglePassword = document.getElementById("togglePassword");
    const password = document.getElementById("password");

    togglePassword.addEventListener('click', function(e) {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
    })

</script>